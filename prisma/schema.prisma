// Prisma schema for AI Video Generation Project
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  videos    Video[]
  videoTasks VideoTask[]
  
  @@map("users")
}

model Video {
  id          String   @id @default(cuid())
  title       String
  description String?
  prompt      String
  videoUrl    String?
  thumbnailUrl String?
  status      String   @default("PENDING")
  duration    Int?
  resolution  String?
  fileSize    Int?
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  user        User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("videos")
}

model VideoTask {
  id               Int      @id @default(autoincrement())

  // 新增: 任务类型: "TXT2IMG", "IMG2IMG", "IMG2VID"
  type             String   @default("IMG2VID")

  // 任务状态
  status           String   @default("PENDING") // PENDING, PROCESSING, COMPLETED, FAILED

  // 提示词相关 (向后兼容)
  userPrompt       String?
  style            String?
  translatedPrompt String?

  // 关联 ComfyUI 的 ID
  promptId         String?  @unique

  // 结果
  resultUrl        String?
  videoUrl         String? // 向后兼容旧字段

  // 新增: 存储参考图路径 (图生图专用)
  refImageBody     String?
  refImageFace     String?

  // 关联用户
  userId           String?
  user             User?    @relation(fields: [userId], references: [id])

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("video_tasks")
}

model Template {
  id          String   @id @default(cuid())
  name        String
  description String?
  prompt      String
  category    String
  tags        String
  isPublic    Boolean @default(true)
  usageCount  Int @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("templates")
}

